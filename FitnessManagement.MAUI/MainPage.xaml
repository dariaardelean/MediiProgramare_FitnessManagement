<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitnessManagement.MAUI.MainPage"
    Title="Fitness Classes"
    BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label
                Text="Available Fitness Classes"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White" />

            <Button
                Text="My Bookings"
                Clicked="OnMyBookingsClicked"
                BackgroundColor="#333"
                TextColor="White"/>
            
            <CollectionView x:Name="ClassesCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="15"
                            Margin="0,5"
                            CornerRadius="10"
                            BackgroundColor="#F5F5F5"
                            HasShadow="True">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="OnClassTapped"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="6">
                                <Label
                                    Text="{Binding Name}"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    TextColor="Black" />

                                <Label
                                    Text="{Binding TrainerName}"
                                    FontSize="14"
                                    TextColor="Gray" />

                                <Label
                                    Text="{Binding ScheduledDate}"
                                    FontSize="12"
                                    TextColor="Gray" />
                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
