<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitnessManagement.MAUI.MyBookingsPage"
    Title="My Bookings"
    BackgroundColor="#121212">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label
            Text="My Bookings"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="White" />

        <CollectionView x:Name="BookingsCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" CornerRadius="10" BackgroundColor="#F5F5F5">
                        <VerticalStackLayout>
                            <Label Text="{Binding ClassName}" FontAttributes="Bold" />
                            <Label Text="{Binding TrainerName}" FontSize="13" />
                            <Label Text="{Binding BookingDate}" FontSize="12" />

                            <Button
                                Text="Cancel"
                                BackgroundColor="DarkRed"
                                TextColor="White"
                                Clicked="OnDeleteClicked"
                                CommandParameter="{Binding .}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>