@page
@model MediiProgramare_FitnessManagement.Pages.Trainers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Specialty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trainer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            <td>
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <text> | </text>  <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                        <text> | </text>  <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
