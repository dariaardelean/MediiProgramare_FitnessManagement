@page
@model MediiProgramare_FitnessManagement.Pages.Gyms.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gym</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gym.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gym.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gym.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gym.Address)
        </dd>
    </dl>
</div>

<h4>Classes in this gym</h4>

@if (Model.Gym.FitnessClasses != null && Model.Gym.FitnessClasses.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Schedule</th>
                <th>Trainer</th>
                <th>Class Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fc in Model.Gym.FitnessClasses)
            {
                <tr>
                    <td>@fc.ClassName</td>
                    <td>@fc.ScheduleDate</td>
                    <td>@fc.Trainer.FirstName @fc.Trainer.LastName</td>
                    <td>@fc.ClassType.TypeName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No classes scheduled for this gym.</em></p>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Gym?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
