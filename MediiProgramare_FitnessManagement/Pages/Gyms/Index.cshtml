@page
@model MediiProgramare_FitnessManagement.Pages.Gyms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
{
 <p>
    <a asp-page="Create">Create New</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Gym Name
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GymData.Gyms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> 
                    @if (User.IsInRole("Admin"))
                    {
                    <text> | </text>  <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                    <text> | </text>  <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    }
          
            </td>
        </tr>
}
    </tbody>
</table>
